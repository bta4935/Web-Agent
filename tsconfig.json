{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ES2022", "DOM"],
    "types": ["node", "@cloudflare/workers-types", "vitest/globals", "@types/jest"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
