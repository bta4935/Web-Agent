{
	"name": "wrangler-action",
	"version": "3.14.1",
	"description": "GitHub Action to use [Wrangler](https://developers.cloudflare.com/workers/cli-wrangler/).",
	"author": "wrangler@cloudflare.com",
	"license": "MIT OR Apache-2.0",
	"bugs": {
		"url": "https://github.com/cloudflare/wrangler-action/issues"
	},
	"homepage": "https://github.com/cloudflare/wrangler-action#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cloudflare/wrangler-action.git"
	},
	"keywords": [
		"script",
		"cli",
		"serverless",
		"cloudflare",
		"cloudflare-workers",
		"typescript"
	],
	"type": "module",
	"main": "dist/index.mjs",
	"scripts": {
		"build": "npx ncc build ./src/crawler/index.ts && move .\\dist\\index.js .\\dist\\index.mjs",
		"build:crawler": "tsc",
		"dev:crawler": "wrangler dev --local src/crawler/index.ts",
		"deploy:crawler": "wrangler deploy src/crawler/index.ts",
		"test": "vitest",
		"test:crawler": "vitest src/crawler/**/*.test.ts",
		"format": "prettier --write .",
		"check": "prettier --check ."
	},
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@actions/exec": "^1.1.1",
		"@actions/github": "^6.0.0",
		"@cloudflare/puppeteer": "^0.0.11",
		"wrangler": "^4.12.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.12",
		"@cloudflare/workers-types": "^4.20241022.0",
		"@types/mock-fs": "^4.13.4",
		"@types/node": "^22.14.1",
		"@types/semver": "^7.5.8",
		"@vercel/ncc": "^0.38.2",
		"eslint": "^9.25.0",
		"express": "^5.1.0",
		"mock-fs": "^5.4.1",
		"msw": "^2.6.4",
		"prettier": "^3.5.3",
		"semver": "^7.6.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"vitest": "^3.1.1"
	}
}
